.top {
 width: 100vw;
  height: 110rpx;
  background-color: #ffd700;
  position: fixed;
  top: 0;
  z-index: 1;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.top .daka{
   display: flex;
  justify-content: space-between;
  align-items: center;
}
.top .yidaka{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: green;
  margin-left: 30rpx;
  margin-right: 10rpx;
}
.top .weidaka{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: gray;
  margin-left: 10rpx;
}
.top .int{
  margin-right: 30rpx;
  font-size: 20px; 
  font-weight: bold;
}

/* 日历部分 */
.todo-calendar{
  margin-top: 140rpx;
}
.calendar {
  background-color:white; /*背景色为白色*/
  padding-top: 10px;    /*上内边距为10px*/
  color: #ffd700;
  border-radius: 15px;   /*添加边框圆角*/
  border: 5rpx solid #ffd700;
  -webkit-box-shadow:0 0 10px #ffd700;
  -moz-box-shadow:0 0 10px #ffd700;
  box-shadow:0 0 10px #ffd700;
}




